{
  "name": "@gen-x/core",
  "version": "1.0.1",
  "description": "Anything to anything",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean && npm run generate:genXType",
    "build": "tsc",
    "postbuild": "npm run clean:tests && npm run clean:scripts",
    "clean": "rimraf dist",
    "clean:tests": "rimraf 'dist/**/?(__tests__|__mocks__)'",
    "clean:scripts": "rimraf dist/scripts",
    "generate:genXType": "ts-node src/scripts/generateGenXTypings",
    "prepublishOnly": "npm run build",
    "prestart": "npm run generate:genXType",
    "start": "tsc --watch --preserveWatchOutput",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/caterpillar.git"
  },
  "keywords": [
    "pipe",
    "promise",
    "generator",
    "stream"
  ],
  "author": "John Wright <johngeorgewright@gmmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/caterpillar/issues"
  },
  "homepage": "https://github.com/johngeorgewright/caterpillar#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/ejs": "^3.0.4",
    "@types/jest": "^26.0.10",
    "@types/lodash.range": "^3.2.6",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "ejs": "^3.1.5",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "lodash.range": "^3.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "web-streams-polyfill": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
